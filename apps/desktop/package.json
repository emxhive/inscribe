{
    "name": "desktop",
    "version": "0.1.0",
    "private": true,
    "main": "dist/main.js",
    "scripts": {
        "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\" \"wait-on http://localhost:5173 dist/main.js && electron .\"",
        "dev:renderer": "vite",
        "dev:electron": "tsc --project tsconfig.electron.json --watch",
        "build": "npm run build:electron && npm run typecheck && vite build",
        "build:electron": "tsc --project tsconfig.electron.json",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "test": "vitest run",
        "start": "electron dist/main.js",
        "preview": "vite preview"
    },
    "dependencies": {
        "@fontsource/inter": "^5.2.8",
        "@fontsource/jetbrains-mono": "^5.2.8",
        "@inscribe/engine": "0.1.0",
        "@inscribe/shared": "0.1.0",
        "@radix-ui/react-slot": "^1.2.4",
        "@uiw/react-codemirror": "^4.23.11",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "@codemirror/lang-css": "^6.2.0",
        "@codemirror/lang-html": "^6.4.10",
        "@codemirror/lang-javascript": "^6.2.2",
        "@codemirror/lang-json": "^6.0.1",
        "@codemirror/lang-markdown": "^6.2.5",
        "@codemirror/lang-python": "^6.1.7",
        "@codemirror/lang-xml": "^6.1.0",
        "@codemirror/lang-yaml": "^6.1.0",
        "@codemirror/theme-one-dark": "^6.1.2",
        "lucide-react": "^0.562.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwind-merge": "^3.4.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.23",
        "concurrently": "^8.2.2",
        "electron": "39.2.7",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.19",
        "typescript": "^5.3.3",
        "vitest": "^1.6.1",
        "vite": "^5.0.8",
        "wait-on": "^7.2.0"
    }
}
