{
    "name": "@inscribe/desktop",
    "version": "0.1.0",
    "private": true,
    "main": "dist/main.js",
    "scripts": {
        "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\" \"wait-on http://localhost:5173 dist/main.js && electron .\"",
        "dev:renderer": "vite",
        "dev:electron": "tsc --project tsconfig.electron.json --watch",
        "build": "npm run build:electron && npm run typecheck && vite build",
        "build:electron": "tsc --project tsconfig.electron.json",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "start": "electron dist/main.js",
        "preview": "vite preview"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^8.2.2",
        "electron": "39.2.7",
        "typescript": "^5.3.3",
        "vite": "^5.0.8",
        "wait-on": "^7.2.0"
    }
}