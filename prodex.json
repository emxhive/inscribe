{
    "version": 3.1,
    "$schema": "https://raw.githubusercontent.com/emxhive/prodex/main/schema/prodex.schema.json",
    "output": {
        "dir": ".prodex@inscribe"
    },

    "resolve": {
        "aliases": {
            "@engine": "packages/engine/src",
            "@shared": "packages/shared/src",
            "@app": "apps/desktop/src",
            "@": "apps/desktop/src"
        }
    },
    "shortcuts": {
        "config": {
            "include": [
                "**/{package, prodex}.json",
                "**/tsconfig*.json",
                "**/vite.config*.ts"
            ]
        },
        "packages": {
            "include": [
                "packages/*/src/**/*.{ts,tsx,js,jsx}"
            ]
        },
        "app": {
            "include": [
                "apps/desktop/src/**/*.{ts,tsx,js,jsx,css,scss,html}"
            ]
        }
    }
}