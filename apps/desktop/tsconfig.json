{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@inscribe/shared": ["../../packages/shared/dist"],
      "@inscribe/shared/*": ["../../packages/shared/dist/*"],
      "@inscribe/engine": ["../../packages/engine/dist"],
      "@inscribe/engine/*": ["../../packages/engine/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/main.ts", "src/preload.ts"]
}